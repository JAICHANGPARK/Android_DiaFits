<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/container_margin">

        <ScrollView
            android:id="@+id/expandedFilterScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dreamwalker.searchfilter.widget.ExpandedFilterView
                android:id="@+id/expandedFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />
        </ScrollView>
    </FrameLayout>

    <com.dreamwalker.searchfilter.widget.CollapsedFilterContainer
        android:id="@+id/collapsedContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</FrameLayout>